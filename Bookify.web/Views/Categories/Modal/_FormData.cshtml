@model CreateCategoryViewModel
<div class="modal-header">
    <h3 class="modal-title">Modal title</h3>
    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
        <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
    </div>
</div>
<form class="form" asp-controller="Categories" asp-action="CreateAjax"
        data-ajax-method="post" 
        data-ajax="true" 
        data-ajax-begin="onModalStart"
        data-ajax-complete="onModalComplete"
        data-ajax-success="onSuccessForm" 
        data-ajax-failuer="showToast('Something went wrong!', 'text-white bg-danger');" 
        id="kt_careers_form">
    <div class="modal-body">
        <div class="row has-validation">
            <div class="col-md-12">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control form-control-solid" 
                            asp-for="Name"  placeholder="Please enter category name" />
                    <label asp-for="Name"></label>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
